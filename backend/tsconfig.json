{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "outDir": "./dist",
      "rootDir": "./src",
    },
    "ts-node": {
      "experimentalSpecifierResolution": "node",
      "transpileOnly": true,
      "esm": true,
      "moduleTypes": {
        "**/*": "esm"
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  